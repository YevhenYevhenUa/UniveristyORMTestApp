@using Task9.University.Infrastructure.Presentations;
@model CreateStudentViewModel

@{
    ViewData["Title"] = "Add new student";
}

<h2>New student</h2>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="GroupId" name="GroupId" asp-for="GroupId" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter first name">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Enter last name">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button  type="button" onclick="history.go(-1)" class="btn btn-secondary">Back</button>
</form>