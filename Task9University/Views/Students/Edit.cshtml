@using Task9.University.Infrastructure.Presentations;
@model EditStudentViewModel

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="Description">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Description">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <input type="hidden" id="GroupId" name="GroupId" asp-for="GroupId" />
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Students" asp-action="Delete" asp-route-id="@Model.Id" type="button" class="btn btn-danger">Delete</a>
    <button type="button" onclick="history.go(-1)" class="btn btn-secondary">Back</button>
</form>
