@using Task9.University.Infrastructure.Presentations;
@model EditCourseViewModel

@{
    ViewData["Title"] = "Edit course";
}

<h2>Edit course</h2>

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Course Name</label>
        <input asp-for="Name" class="form-control" placeholder="Description">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Course Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" name="CourseId" id="Id"/>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.go(-1)" class="btn btn-secondary">Back</button>
</form>
